<!DOCTYPE html>
<html>
<head>
  <title>Arasay</title>
  <%= favicon_link_tag 'icon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class = 'top_cont'>
  </div>

  <div class = 'menu_cont'>
    <%= link_to root_path do %>
      <%= image_tag 'logo.png' %>
    <% end %>
  </div>

  <div class = 'mid_cont'>
    <div class = 'start_divider'>
    </div>

  	<div class = 'content_cont'>
	    <%= yield %>
  	</div>

  	<div class = 'right_side_cont'>
      <div class = 'parent_login_cont'>
        <div class = 'login_cont'>
          <% if current_user.nil? %>
            <%= link_to 'Войти', new_user_session_path  %>
            <div class = 'login_cont_divide'></div>
            <%= link_to 'Зарегистрироваться', new_user_registration_path  %>
          <% else %>
            <%= link_to 'Профиль', profile_path  %>
            <div class = 'login_cont_divide'></div>
            <%= link_to 'Выйти', destroy_user_session_path, method: :delete  %>
          <% end %>
        </div>
      </div> 
      <div class = 'right_banner'></div>
  	</div>

  </div>

  <div class = 'bot_cont'>
    <%= link_to 'Об Arasay', about_path %>
    <%= link_to 'Контакты', contacts_path %>    
  </div>

<div class = 'notice'>
  <%= @notice %>
</div>

</body>
</html>
